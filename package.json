{
	"name": "@konemono/nostr-web-components",
	"version": "0.0.23",
	"scripts": {
		"prepare": "npm run build",
		"dev": "vite",
		"build": "vite build",
		"build:types": "tsc --project tsconfig.json",
		"build:pages": "tsc && vite build --mode pages",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/TsukemonoGit/nostr-web-components"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"main": "./dist/nostr-web-components.umd.js",
	"module": "./dist/nostr-web-components.mjs",
	"unpkg": "./dist/nostr-web-components.iife.js",
	"jsdelivr": "./dist/nostr-web-components.iife.js",
	"svelte": "./dist/nostr-web-components.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/nostr-web-components.mjs",
			"require": "./dist/nostr-web-components.umd.js"
		},
		"./style.css": "./dist/nostr-web-components.css"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.31.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.5",
		"@sveltejs/package": "^2.3.12",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/vite": "^4.1.11",
		"@types/node": "^24.0.13",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.12",
		"svelte": "^5.35.6",
		"svelte-check": "^4.2.2",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.36.0",
		"vite": "^7.0.4"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@konemono/nostr-content-parser": "^0.6.6",
		"@rx-nostr/crypto": "^0.0.0",
		"nostr-tools": "^2.15.0",
		"nostr-typedef": "^0.13.0",
		"rx-nostr": "^3.6.1"
	}
}
